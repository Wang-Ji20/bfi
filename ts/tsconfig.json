{
    "compilerOptions": {
        "incremental": true,
        "tsBuildInfoFile": "dist/.tsbuildinfo",
        "target": "ES2018",
        "module": "NodeNext",
        "rootDir": "./src",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
